.container {
  background: #f5f5f0;
  min-height: 100vh;
  padding: 20rpx;
}

.progress {
  background: #e8e8e0;
  height: 8rpx;
  margin-bottom: 40rpx;
}

.progress-bar {
  background: #3a3a3a;
  height: 100%;
  transition: width 0.3s;
}

.quiz-card {
  background: white;
  padding: 60rpx 40rpx;
  border: 1px solid #e8e8e0;
}

.qnum {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.question {
  display: block;
  font-size: 36rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.tip {
  display: block;
  background: #f9f9f5;
  padding: 20rpx;
  border-left: 3px solid #3a3a3a;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.option {
  display: flex;
  align-items: center;
  border: 1px solid #e8e8e0;
  padding: 30rpx;
  margin: 20rpx 0;
}

.option radio {
  margin-right: 20rpx;
}

.option text {
  flex: 1;
  font-size: 28rpx;
}

.buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.btn-primary, .btn-secondary {
  flex: 1;
  margin: 0 10rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.btn-primary {
  background: #3a3a3a;
  color: white;
  border: none;
}

.btn-secondary {
  background: transparent;
  color: #3a3a3a;
  border: 2px solid #3a3a3a;
}

button[disabled] {
  opacity: 0.3;
}
