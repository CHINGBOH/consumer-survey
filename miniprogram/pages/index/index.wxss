.container {
  background: #f5f5f0;
  min-height: 100vh;
  padding: 40rpx;
}

.hero {
  background: white;
  padding: 80rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  border: 1px solid #e8e8e0;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 400;
  margin-bottom: 30rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 60rpx;
}

.btn-primary {
  background: #3a3a3a;
  color: white;
  border: none;
  padding: 24rpx 80rpx;
  font-size: 32rpx;
}

.features {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.feature {
  flex: 1;
  background: white;
  padding: 40rpx 20rpx;
  text-align: center;
  margin: 0 10rpx;
  border: 1px solid #e8e8e0;
}

.icon {
  display: block;
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.types {
  background: white;
  padding: 40rpx;
  border: 1px solid #e8e8e0;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: 400;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #3a3a3a;
}

.type-item {
  padding: 30rpx 0;
  border-bottom: 1px solid #e8e8e0;
  display: flex;
  align-items: center;
}

.type-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.type-name {
  flex: 1;
  font-size: 30rpx;
}

.type-risk {
  font-size: 24rpx;
  color: #666;
}
